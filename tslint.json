{
    "defaultSeverity": "warn",
    "extends": [
        "tslint:latest"
    ],
    "rules": {
        "no-any": true,
        "object-literal-sort-keys": false,
        "semicolon": [true, "always"],
        "indent": [true, "spaces", 4],
        "trailing-comma": [
            true,
            {
                "objects": "always",
                "arrays": "always",
                "functions": "never",
                "typeLiterals": "never"
            }
        ]
    }
}
